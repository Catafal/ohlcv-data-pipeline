# Alpaca API Configuration (required for alpaca pipeline)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Yahoo Finance Configuration (no API keys needed)
# yfinance is completely free - no secrets required!

# Alpha Vantage API Configuration (required for alpha_vantage pipeline)
# Get free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Styvio API Configuration (requires RapidAPI subscription)
# Get free account at: https://rapidapi.com/styvioapi-styvioapi-default/api/styvio-stock-market-data-v2
STYVIO_API_KEY=your_rapidapi_key_here

# Database Configuration
DATABASE_PATH=data/databases/market_data.db
YFINANCE_DATABASE_PATH=data/databases/yfinance_data.db

# Optional: Rate limiting and retry settings
MAX_RETRIES=3
REQUEST_DELAY=0.2
ALPACA_RATE_LIMIT_DELAY=0.2
YFINANCE_REQUEST_DELAY=0.1

# Optional: Data validation settings
MAX_DAILY_RETURN=0.4
MIN_VOLUME=0
MAX_VOLUME=1000000000000